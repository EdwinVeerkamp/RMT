<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{56} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
      <file>rmt.log</file>
      <append>false</append>
      <!-- encoders are assigned the type
           ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
      <encoder>
          <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
      </encoder>
    </appender>

    <logger name="org.hibernate.cfg" level="WARN" />
    <logger name="org.hibernate.sql" level="DEBUG" />
    <logger name="org.hibernate.type" level="WARN" /> <!-- set to TRACE to see sql parameter values -->
    <logger name="org.hibernatex" level="INFO" />
    <logger name="org.springframework" level="INFO" />
    <logger name="org.dbunit" level="INFO" />
    <logger name="org.apache.commons" level="INFO" />

    <logger name="de.flower.common.aop" level="TRACE"  />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE" />
    </root>

</configuration>